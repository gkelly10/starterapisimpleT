<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Demo Day</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <div class="row">

    <!-- LOCAL INFORMATION -->
     <div class="col-sm-6">
        <div class="well">
            <h3><span class="fa fa-user"></span> Local</h3>

            <% if (user.local.email) { %>
                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>email</strong>: <%= user.local.email %><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>

                <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
            <% } %>

        </div>
    </div>




  <h1>Task Feedback Tracker</h1>
  <form id="taskForm" action="/tasks" method="POST">
    <input type="text" name="title" placeholder="Task Title" required>
    <p><strong>Feedback</strong></p>
    <select name="feedback" class="feedback">
        <option value="pending">Pending</option>
        <option value="completed">Completed</option>
        <option value="challenging">Challenging</option>
    </select>
    <button type="submit">Add Task</button>
    
  </form>

  <section class="task-container-for-styling">
    <% for (let i = 0; i < tasks.length; i++) { %>
        <section class="info">
          <h3><strong>Task:</strong> <%= tasks[i].title %></h3> 
          <p><strong>Feedback:</strong> <%= tasks[i].feedback %></p>
        </section>
        <button class="edit-btn" data-id="<%= tasks[i]._id %>">Edit</button>
        <button class="delete-btn" data-id="<%= tasks[i]._id %>">Delete</button>
      </section>
    <% } %>
    </section>

  <script src="main.js"></script>
</body>
</html>